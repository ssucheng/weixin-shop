<!--pages/goods_detail/goods_detail.wxml-->
<view class="goods_detail">
    <!-- 轮播图 -->
    <view class="swiper" >
        <swiper indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
        <block wx:for="{{goodsDetailList.pics}}" 
               wx:key="pics_id"
               >
          <swiper-item>
            <view class="swiper-item" bindtap="handlItemChange"
                                      data-index="{{index}}">
                <image mode="widthFix" src="{{item.pics_mid}}">

                </image>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <!-- 文字 -->
    <view class="goods_content" >
        <view class="goods_price" >
            ￥{{goodsDetailList.goods_price}}
        </view>
        <view class="goods_text" >
            <view class="txt" >
                {{goodsDetailList.goods_name}}
            </view>
            <!-- icon-collection-b -->
            <view class="save " bindtap="handlItemCollect"
                                >
                <view class="iconfont {{isCollect?'icon-collection-b': 'icon-shoucang'}}" >
                </view>
                收藏
            </view>
        </view>
        
    </view>
    <view class="line" >        
     </view>
    <!-- 图文详情 -->
    <view class="goods_detail_title">
        图文详情
    </view>
    <view class="line" >        
     </view>

    <!-- 富文本 -->
    <block>
        <rich-text class="" nodes="{{goodsDetailList.goods_introduce}}">
            
        </rich-text>
    </block>
    <!-- 购买导航栏 -->
    <view class="btm_tool" >
        <view class="btm_item">
            <view class="iconfont icon-kefu">
            </view>
            <view>
                客服
            </view>
            <button open-type="contact"></button>
        </view>
         <view class="btm_item">
            <view class="iconfont icon-fenxiang">
            </view>
            <view>
                分享
            </view>
            <button open-type="share"></button>
        </view>
         <view class="btm_item">
            <view class="iconfont icon-gouwuche">
            </view>
            <view>
                购物车
            </view>
            <button open-type="switchTab"></button>
        </view>
         <view class="btm_item1 car">
           
            <view class="">
                加入购物车
            </view>
        </view>
         <view class="btm_item1 pay">
           
            <view class="">
                立即购买
            </view>
        </view>
        
    </view>
</view>
